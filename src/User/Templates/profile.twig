<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kontoeinstellungen</title>
    <!-- Verlinke die CSS-Datei -->
    <link rel="stylesheet" type="text/css" href="styles/profile.css">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
</head>
<body>

<div class="form-container">
    <h1>Kontoeinstellungen</h1>

    <form id="changeProfileForm">
        <label for="username">Benutzername:</label>
        <input type="text" class="form-control" id="username" name="username" required>

        <label for="password">Passwort:</label>
        <input type="password" class="form-control" id="password" name="password" required>

        <label for="profilePicture">Profilbild-URL:</label>
        <input type="url" class="form-control" id="profilePicture" name="profilePicture">

        <button type="submit" class="btn btn-primary">Speichern</button>
    </form>

    <div class="divider"></div>

    <form id="deleteAccountForm">
        <h3>Konto löschen</h3>
        <p class="text-danger">Warnung: Das Löschen Ihres Kontos ist endgültig!</p>

        <label for="confirmDelete">Bestätigen Sie durch Eingabe von "LÖSCHEN":</label>
        <input type="text" class="form-control" id="confirmDelete" name="confirmDelete" required>

        <button type="button" class="btn btn-danger" onclick="confirmDelete()">Konto löschen</button>
    </form>
</div>

<!-- Bootstrap JS and Popper.js (required for Bootstrap) -->
<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>

<script>
    document.getElementById("changeProfileForm").addEventListener("submit", function(event) {
        event.preventDefault();
        // Hier kann der Code für die Aktualisierung der Benutzerinformationen geschrieben werden
        // z.B., eine AJAX-Anfrage an den Server senden
    });

    function confirmDelete() {
        var confirmation = document.getElementById("confirmDelete").value;
        if (confirmation === "LÖSCHEN") {
            // Hier kann der Code für das Löschen des Kontos geschrieben werden
            // z.B., eine AJAX-Anfrage an den Server senden
            alert("Konto erfolgreich gelöscht!");
        } else {
            alert("Falsche Bestätigung. Konto wurde nicht gelöscht.");
        }
    }
</script>
</body>
</html>
